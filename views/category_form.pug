extends layout 

block content 
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name: 
      input#name.form-control(type='text', placeholder='Toy, Blanket, etc.' name='name' 
      value=(undefined===category ? '' : category.name))

    div.form-group
      label(for='description') Description: 
      input#description.form-control(type='textarea' placeholder='Say something about category...' name='description' 
      value=(undefined===category ? '' : category.description))

    button.btn.btn-primary(type='submit') Submit 

  if errors 
    ul 
      for error in errors 
        li!= error.msg